{% extends 'base.html.twig' %}
{% block title %}{{ page_title }} !{% endblock %}
{% block body %}
<div class="uk-section">
    <div class="uk-container uk-container-small">
        <h1>{{ page_title }}</h1>

        <table class="uk-table uk-table-responsive uk-table-divider">
            <thead>
                <tr>
                    <th>Présent</th>
                    <th>Préterit</th>
                    <th>Participe passé</th>
                    <th>Traduction</th>
                </tr>
            </thead>
            <tbody>
                {% for verb in verbs %}
                <tr>
                    <td><a href="{{ path('app_the_verb', { 'present': verb.present }) }}">{{ verb.present }}</a></td>
                    <td>{{ verb.preterit }}</td>
                    <td>{{ verb.participepasse }}</td>
                    <td>{{ verb.traduction }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                    <td class="uk-text-right">
                        <a href="{{ path('app_edit_verb', { 'id': verb.id }) }}" uk-icon="icon: pencil"></a>
                        <a href="{{ path('app_delete_verb', { 'id': verb.id }) }}" uk-icon="icon: trash"></a>
                    </td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</div>
{% endblock %}
