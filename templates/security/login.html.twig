{% extends 'base.html.twig' %}
{% block title %}Connexion!{% endblock %}
{% block body %}
<div class="uk-section" uk-height-viewport="offset-top: true">
    <div class="uk-container uk-container-small">
        <h1>Connexion</h1>
        <form method="post" class="uk-grid-small" uk-grid>
            {# element form error response #}
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {# element form username #}
            <div class="uk-width-1-3@s">
                <div class="uk-inline uk-width-1-1@s">
                    <span class="uk-form-icon" uk-icon="icon: happy"></span>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="uk-input" placeholder="Email" required autofocus>
                </div>
            </div>
            {# element form forname #}
            <div class="uk-width-1-3@s">
                <div class="uk-inline uk-width-1-1@s">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input type="password" name="password" id="inputPassword" class="uk-input" placeholder="Mot de passe" required>
                </div>
            </div>
            {# element form _remember_me #}
            <div class="uk-width-1-3@s">
                <label><input class="uk-checkbox" type="checkbox" name="_remember_me"> Se rappeler de moi</label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {# element form submit #}
            <div class="uk-width-1-1@s">
                <button class="uk-button uk-button-secondary uk-width-1-1" type="submit">Envoyer</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
